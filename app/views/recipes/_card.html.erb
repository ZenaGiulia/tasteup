<div class="card-recipe p-2 rounded-2">
  <%= link_to recipe_path(recipe), class:"card-recipe-link" do %>
    <div class="square">
      <%= image_tag (cl_image_path(recipe.photo.key)), class: "rounded", style: "width: 100%; height: 100%; object-fit: cover;" %>
    </div>
    <h2 class="recipe-name mt-2"><%= recipe.title %></h2>
    <i class="fa-regular fa-clock"></i>
    <span class="time-recipe"><%= recipe.cooking_time %> min</span>
  <% end %>
</div>
