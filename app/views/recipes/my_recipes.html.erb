<div class="container landing-header px-4 pt-5 pb-3">
  <div class="d-flex">
    <h3 class="flex-grow-1"> Bonjour Julia !</h3>
    <%= image_tag "image.png", class: "avatar" %>
  </div>
  <h3 class="mb-4"> On cuisine quoi aujourd'hui ?</h3>
  <%= form_with url: my_recipes_path, method: :get, class: "d-flex"  do %>
    <%= text_field_tag :query,
              params[:query],
              class: "form-control form-control-sm", id: "input_field",
              placeholder: "Envie de... ?" %>
    <button type="submit" class="btn form-control-sm", id="btn_search">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  <% end %>
</div>

<div class="mt-4 pt-1 bg-white rounded-2">
  <div class="container">
    <h3 class="title"> Mes recettes favorites 😍</h3>
    <div class= "d-flex overflow-x-auto">
       <%= render "recipes/recipes", recipes: @favorite_recipes %>
    </div>
  </div>
</div>

<div class="mt-4 pt-1 bg-white rounded-2">
  <div class="container">
    <h3 class="title"> Les recettes de mes amis 🤗</h3>
    <div class= "d-flex overflow-x-auto">
      <%= render "recipes/recipes", recipes: @recipes_user2 %>
    </div>
  </div>
</div>

<div class="mt-4 pt-1 bg-white rounded-2">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h3 class="title">Toutes mes recettes 🧑‍🍳</h3>
      <%= link_to "Voir tout", recipes_user_path(current_user.id), class:"see-all" %>
    </div>
    <div class= "d-flex overflow-x-auto">
      <%= render "recipes/recipes", recipes: @my_recipes %>
  </div>
</div>
