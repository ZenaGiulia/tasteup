<div class="container landing-header px-4 py-5">
  <div class="d-flex">
    <h3 class="flex-grow-1"> Bonjour Julia !</h3>
    <%= image_tag "image.png", class: "avatar" %>
  </div>
  <h3 class="mb-5"> On cuisine quoi aujourd'hui ?</h3>
  <%= form_with url: my_recipes_path, method: :get, class: "d-flex"  do %>
    <%= text_field_tag :query,
              params[:query],
              class: "form-control form-control-sm", id: "input_field",
              placeholder: "Envie de... ?" %>
    <button type="submit" class="btn form-control-sm", id="btn_search">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  <% end %>
</div>

  <div class="mt-2 bg-white rounded-2 py-3">
  <div class="container">
    <h3 class="title"> Mes recettes préférées 😍 </h3>
    <div class= "d-flex overflow-x-auto">
      <% @favorite_recipes.each do |recipe| %>
        <div class="card-recipe m-3">
          <%= link_to recipe_path(recipe), class:"card-recipe" do %>
            <div class="square">
              <%= image_tag (recipe.photo.attached? ? cl_image_path(recipe.photo.key) : "https://placehold.co/600x400"), class: "rounded", style: "width: 100%; height: 100%; object-fit: cover;" %>
            </div>
            <h2 class="recipe-name mt-2"><%= recipe.title %></h2>
            <i class="fa-regular fa-clock"></i>
            <span class="time-recipe"><%= recipe.cooking_time %> min</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

