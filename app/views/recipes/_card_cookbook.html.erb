<%= link_to recipes_user_path(user), class:"link-custom" do %>
<div class="card-recipe p-2 rounded-2">
  <div class="recipe-preview">
    <% user.recipes.limit(4).each do |recipe| %>
      <div class="recipe-image">
        <%= image_tag (recipe.photo.attached? ? cl_image_path(recipe.photo.key) : "https://placehold.co/600x400"), alt: recipe.title %>
      </div>
    <% end %>
    <div id="avatar-cookbook">
      <%= image_tag user.photo, class: "avatar-small-bordered me-2" %>
    </div>
  </div>
  <div class="d-flex align-items-center">
    <h2 class="recipe-name mt-2">Recettes de <%= user.first_name %></h2>
  </div>
  <% end %>
</div>
